function resetJSMediaQueries() {
	$('*').css('font-size', '12px');	
	$('#checkout-form-title-en').css('font-size', '14px');
	$('#checkout-form-info-en').css('margin-top', '10px');
	$('#checkout-form-title-ar').css('font-size', '14px');
	$('#checkout-form-info-ar').css('margin-top', '10px');	
	$('.generalMessage').css('margin-top', '5px');
	$('.textInput').css('height', '20px');
	$('#checkout-form-button').css('height', '20px');
	$('#checkout-form-button').css('margin-top', '10px !important');	
	$('#resend-form').css('margin-top', '20px !important');	
}

function apply450MediaQuery() {
	$('*').css('font-size', '13px');	
	$('#checkout-form-title-en').css('font-size', '16px');
